<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF0F5"
    android:orientation="vertical"
    tools:context="com.example.rewardingfitness.FitnessGames">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D8BFD8"
        android:textAlignment="textEnd"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="FitnessGames"
        app:titleTextColor="#B22222"
        android:gravity="end"
        />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:orientation="vertical" >

            <LinearLayout
                android:onClick="Pushups"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30.0dp"
                android:layout_marginTop="400.0dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="Pushups"
                            android:textAlignment="center"
                            android:textColor="#B22222"
                            android:textSize="30.0dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="10dp"
                            android:text="20:00 MIN"
                            android:textColor="#DC143C"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="15.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="327 Cal"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pushups" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="Balance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30.0dp"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="Balance"
                            android:textAlignment="center"
                            android:textColor="#B22222"
                            android:textSize="30.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="10dp"
                            android:text="10:00 MIN"
                            android:textColor="#DC143C"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="15.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="212 Cal"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/balance" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="FrogJump"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30.0dp"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="FrogJump"
                            android:textAlignment="center"
                            android:textColor="#B22222"
                            android:textSize="30.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="10dp"
                            android:text="10:00 MIN"
                            android:textColor="#DC143C"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="15.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="286 Cal"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/frogjump" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="Boxing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30.0dp"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="Boxing"
                            android:textAlignment="center"
                            android:textColor="#B22222"
                            android:textSize="30.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="10dp"
                            android:text="20:00 MIN"
                            android:textColor="#DC143C"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="15.0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="412 Cal"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/boxing" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
